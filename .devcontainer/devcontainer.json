// .devcontainer/devcontainer.json
{
  "name": "Python for EC3318/MN3101",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/va-h/devcontainers-features/uv:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "GitHub.copilot-chat",
        "ms-toolsai.jupyter",
        "ms-python.python",
        "GrapeCity.gc-excelviewer",
        "ms-python.black-formatter",
        "emeraldwalk.runonsave"
      ],
      "settings": {
        "emeraldwalk.runonsave": {
          "commands": [
            {
              "match": ".*",
              "cmd": "/usr/local/python/current/bin/python /workspaces/cflabs/.utilities/save-files.py"
            }
          ]
        }
      }
    }
  }
}
